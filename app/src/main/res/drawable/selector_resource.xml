<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="5dp"
    android:insetTop="5dp"
    android:insetRight="5dp"
    android:insetBottom="5dp">
    <selector>

        <!-- 선택되었을 때의 스타일 -->
        <item android:state_selected="true">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- 선택되었을 때의 배경 색상 -->
                <stroke android:width="2dp" android:color="@color/BlueLight20" /> <!-- 선택되었을 때의 테두리 색상 -->
                <corners android:radius="10dp" /> <!-- 둥근 테두리 반경 -->
            </shape>
        </item>

        <!-- 선택되지 않았을 때의 스타일 -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- 선택되지 않았을 때의 배경 색상 -->
                <stroke android:width="2dp" android:color="@color/Grayscale20" /> <!-- 선택되지 않았을 때의 테두리 색상 -->
                <!-- 추가적인 속성들 (radius, padding 등)도 필요에 따라 설정할 수 있습니다. -->
                <corners android:radius="10dp" /> <!-- 둥근 테두리 반경 -->
            </shape>
        </item>
    </selector>

</inset>
